{
    "manifest_version": 3,
    "name": "SummChat",
    "description": "__MSG_appDesc__",
    "default_locale": "en",
    "version": "0.0.1",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {},
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "http://*/*"
            ],
            "css": [
                "content.css",
                "content_main.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "content.css",
                "content_main.css",
                "images/settings.png",
                "options.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "scripting",
        "webRequest",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    }
}